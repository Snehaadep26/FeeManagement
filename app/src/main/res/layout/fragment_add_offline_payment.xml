<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddOfflinePayment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textStyle="bold"
                android:textColor="#636363"
                android:textSize="12dp"
                android:text="Class" />
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:hint="Select Class"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#E6E6E6">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:padding="9dp"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Studentâ€™s name/mobile"
                android:textColor="#636363"
                android:textSize="12sp"



                />



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                app:boxStrokeColor="#E6E6E6"
                app:hintTextColor="#AEAEAE"
                app:startIconDrawable="@drawable/search_img">



                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search by name/mobile"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Details"
                android:textColor="#191919"
                android:textSize="14sp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">



                <TextView
                    android:id="@+id/Amt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="3dp"
                    android:text="Amount"
                    android:textColor="#636363"
                    android:textSize="12sp" />



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Amount_Tl"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Amt_tv"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FFFFFF"
                    app:boxStrokeColor="#E6E6E6"
                    app:hintTextColor="#AEAEAE">



                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="\u20B9"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Duedate_Tl"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Amt_tv"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:layout_toRightOf="@id/Amount_Tl"
                    android:textColorHint="#AEAEAE"
                    app:boxStrokeColor="#E6E6E6"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:hintTextColor="#AEAEAE">



                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Set due date"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/Duedate_Tl"
                    android:layout_alignStart="@id/Duedate_Tl"
                    android:layout_alignBottom="@id/Amt_tv"
                    android:layout_toRightOf="@id/Amount_Tl"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Due date"
                    android:textColor="#636363" />
            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="4dp"
                android:text="Description"
                android:textColor="#636363"
                android:textSize="12sp" />



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description_Tl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"



                android:backgroundTint="#FFFFFF"
                app:boxStrokeColor="#E6E6E6"
                app:hintTextColor="#AEAEAE">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Enter description"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:textColor="#636363"
                android:fontFamily="@font/roboto_bold"
                android:text="Amount details"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border5"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="18dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Fee amount"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="165dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="\u20B9"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:textColor="#191919"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="18dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Fast 10"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="-\u20B9"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:visibility="gone"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/Add_Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="-500"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="18dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Discount"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="-\u20B9"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:visibility="gone"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/DiscountAmt_Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Add"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Addition"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="+\u20B9"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:background="#E6E6E6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="5dp"

                            android:text="Total payable"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="160dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="\u20B9"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:textColor="#191919"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="17dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="18dp"
                        android:background="#E6E6E6" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Mode of payment"
                android:textSize="12sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">




                <Button
                    android:id="@+id/button3"
                    android:layout_width="80dp"
                    android:background="@drawable/roundbutton"
                    android:layout_height="35dp"
                    android:layout_marginStart="24dp"
                    android:text="Cash" />



                <Button
                    android:id="@+id/button2"
                    android:layout_width="154dp"
                    android:background="@drawable/roundbutton"
                    android:layout_height="35dp"
                    android:layout_marginStart="24dp"
                    android:text="Debit/Credit card" />

                <Button
                    android:layout_width="80dp"
                    android:background="@drawable/roundbutton"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:text="UPI" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/roundbutton"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:text="Bank Tranfer" />

                <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/roundbutton"
                    android:layout_height="wrap_content"
                    android:text="Cheque" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="4dp"
                    android:text="Transaction ID"
                    android:textColor="#636363"
                    android:textSize="12sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_box"
                    android:padding="10dp"
                    android:hint="Enter transaction ID"
                    android:textColorHint="#AEAEAE"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginVertical="12dp"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="171dp"
        android:id="@+id/send_request_btn"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/border5"
        android:enabled="false"
        android:text="Add" />


</FrameLayout>